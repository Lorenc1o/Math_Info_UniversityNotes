\end_layout

\begin_layout Plain Layout
Sea 
\begin_inset Formula $\varphi\in C\left(\partial\Omega\right)$
\end_inset

 y 
\begin_inset Formula $u\in{\cal A}_{\varphi}$
\end_inset

.
 Son equivalentes: 
\begin_inset Formula $\left(1\right)\Delta u=0$
\end_inset

 y 
\begin_inset Formula $\left(2\right)E\left(u\right)=\min\left\{ \frac{1}{2}\int_{\Omega}\left|\nabla w\right|^{2}:w\in{\cal A}_{\varphi}\right\} $
\end_inset

.
\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\left(1\right)\implies\left(2\right)$
\end_inset

 Sea 
\begin_inset Formula $w\in{\cal A}_{\varphi}$
\end_inset

 y definimos 
\begin_inset Formula $g=w-u\in C^{1}\left(\overline{\Omega}\right)\implies g_{|\partial\Omega}=0$
\end_inset

.
 Entonces 
\begin_inset Formula $E\left(w\right)=E\left(u+g\right)=\frac{1}{2}\int_{\Omega}\left|\nabla u+\nabla g\right|^{2}=\frac{1}{2}\int_{\Omega}\left|\nabla u\right|^{2}+\left|\nabla g\right|^{2}+2\nabla u\nabla g=E\left(u\right)+E\left(g\right)+\int_{\Omega}\nabla u\nabla g=$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\overset{Green1}{=}E\left(u\right)+E\left(g\right)+\int_{\partial\Omega}\left(\nabla u\cdot\overrightarrow{n}\right)g-\int_{\Omega}\left(\Delta u\right)g$
\end_inset


\end_layout

