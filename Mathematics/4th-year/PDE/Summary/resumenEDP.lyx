\begin_layout Standard
Hacemos el cv 
\begin_inset Formula $y=x-ct,z=x+ct\implies t=\frac{z-y}{2c},x=\frac{z+y}{2}$
\end_inset

.
 Definimos 
\begin_inset Formula $v\left(y,z\right)=u\left(t,x\right)$
\end_inset

.
 Entonces 
\begin_inset Formula $u_{t}=v_{y}y_{t}+v_{z}z_{t}=v_{y}\left(-c\right)+cv_{z}$
\end_inset

 , 
\begin_inset Formula $u_{tt}=v_{yy}\left(-c\right)^{2}+v_{yz}\left(-c\right)c+v_{zy}c\left(-c\right)+v_{zz}c^{2}$
\end_inset

, 
\begin_inset Formula $u_{x}=v_{y}y_{x}+v_{z}z_{x}=v_{y}+y_{z}$
\end_inset

 y 
\begin_inset Formula $u_{xx}=v_{yy}+2v_{yz}+v_{zz}$
\end_inset

.
 Entonces
\end_layout

\begin_layout Standard
\begin_inset Formula $0=u_{tt}-c^{2}u_{xx}=c^{2}\left[v_{yy}-2v_{yz}+v_{zz}-v_{yy}-2v_{yz}-v_{zz}\right]=-4c^{2}v_{yz}\implies v_{yz}=0$
\end_inset

.
\end_layout

\begin_layout Standard
Integrando 2 veces 
\begin_inset Formula $\overset{\int dy}{\rightarrow}0=\int_{0}^{y}v_{yz}\left(s,z\right)ds=v_{z}\left(y,z\right)-v_{z}\left(0,z\right)$
\end_inset


\begin_inset Formula $\overset{\int dz}{\rightarrow}0=\int_{0}^{z}\left(v_{z}\left(y,w\right)-v_{z}\left(0,w\right)\right)dw=v\left(y,z\right)-v\left(y,0\right)-v\left(0,z\right)+v\left(0,0\right)$
\end_inset

.
 Por tanto, 
\begin_inset Formula $v\left(y,z\right)=v\left(y,0\right)+v\left(0,z\right)-v\left(0,0\right)$
\end_inset

.
 Tomando 
\begin_inset Formula $F\left(y\right)=v\left(y,0\right)$
\end_inset

 y 
\begin_inset Formula $G\left(z\right)=v\left(0,z\right)-v\left(0,0\right)$
\end_inset

 tenemos que 
\begin_inset Formula $F,G\in C^{2}\left(\mathbb{R}\right)$
\end_inset

 y deshaciendo el cv sale 
\begin_inset Formula $u\left(t,x\right)=F\left(x-ct\right)+G\left(x+ct\right)$
\end_inset

.
\end_layout

